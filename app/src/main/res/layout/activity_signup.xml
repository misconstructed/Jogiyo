<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/background">


    <TextView
        android:id="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:ems="13"
        android:inputType="textPersonName"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nametext"/>

    <TextView
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:layout_alignLeft="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name"/>

    <TextView
        android:id="@+id/alert_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/emailtext"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/name"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:ems="13"
        android:hint="Enter E-mail"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:layout_below="@+id/emailtext"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/passwordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:layout_alignLeft="@+id/password"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email"/>

    <TextView
        android:id="@+id/alert_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/passwordtext"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/email"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:ems="13"
        android:hint="Password"
        android:inputType="textPassword"
        android:gravity="center"
        android:layout_below="@+id/passwordtext"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/passwordconfirmtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:layout_alignLeft="@+id/passwordConfirm"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/password"/>

    <EditText
        android:id="@+id/passwordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:ems="13"
        android:hint="Confirm Password"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_below="@+id/passwordconfirmtext"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_button"
        android:textColor="@color/background"
        android:text="Sign Up"
        android:onClick="signup_data"
        android:textSize="20sp"
        android:layout_below="@+id/passwordConfirm"
        android:layout_centerHorizontal="true" />


</RelativeLayout>